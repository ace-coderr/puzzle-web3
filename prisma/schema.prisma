generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── ENUMS ─────────────────────
enum Difficulty {
  easy
  medium
  hard
}

enum BidStatus {
  PENDING
  SUCCESS
  FAILED
}

enum TransactionType {
  BID
  REWARD
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

// ── MODELS ─────────────────────
model User {
  id            Int           @id @default(autoincrement())
  walletAddress String        @unique
  balance       Decimal       @default(0.0) @db.Decimal(18, 9)
  gameResults   GameResult[]
  bids          Bid[]
  rewards       Reward[]
  transactions  Transaction[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([walletAddress])
}

model GameResult {
  gameId      String    @id @default(cuid())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  time        Int       @default(0)
  bidding     Decimal   @db.Decimal(18, 9)
  won         Boolean   @default(false)
  difficulty  Difficulty @default(medium)
  reward      Decimal?  @db.Decimal(18, 9)
  bid         Bid?
  rewardEntry Reward?   @relation("GameResultToReward")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([createdAt])
}

model Bid {
  id            String          @id @default(cuid())
  gameResultId  String          @unique
  gameResult    GameResult      @relation(fields: [gameResultId], references: [gameId])
  userId        Int
  user          User            @relation(fields: [userId], references: [id])
  amount        Decimal         @db.Decimal(18, 9)
  status        BidStatus       @default(PENDING)
  txSignature   String?
  network       String?         @default("devnet")
  transactions  Transaction[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([gameResultId])
  @@index([userId])
}

model Reward {
  id           String    @id @default(cuid())
  gameResultId String    @unique
  gameResult   GameResult @relation("GameResultToReward", fields: [gameResultId], references: [gameId])
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  title        String
  description  String?
  amount       Decimal   @db.Decimal(18, 9)
  claimed      Boolean   @default(false)
  claimedAt    DateTime?
  createdAt    DateTime  @default(now())

  @@index([gameResultId])
  @@index([userId, claimed])
}

model Transaction {
  id          Int              @id @default(autoincrement())
  userId      Int
  user        User             @relation(fields: [userId], references: [id])
  bidId       String?
  bid         Bid?             @relation(fields: [bidId], references: [id])
  amount      Decimal          @db.Decimal(18, 9)
  type        TransactionType
  status      TransactionStatus @default(PENDING)
  txSignature String? @unique
  createdAt   DateTime         @default(now())

  @@index([userId])
  @@index([bidId])
}