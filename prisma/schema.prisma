datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int           @id @default(autoincrement())
  customId      Int           @unique
  walletAddress String        @unique
  balance       Decimal       @default(0.0) @db.Decimal(18, 8)
  transactions  Transaction[]
  gameResults   GameResult[]
  bids          Bid[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([walletAddress])
}

model GameResult {
  id        Int      @id @default(autoincrement())
  gameId    String   @unique
  score     Int
  moves     Int
  bidding   Decimal  @db.Decimal(18, 8)
  won       Boolean
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  bids      Bid[]
  createdAt DateTime @default(now())
}

model Transaction {
  id        Int               @id @default(autoincrement())
  amount    Decimal           @db.Decimal(18, 8)
  type      TransactionType
  status    TransactionStatus
  user      User              @relation(fields: [userId], references: [id])
  userId    Int
  bid       Bid?              @relation("TransactionToBid")
  createdAt DateTime          @default(now())
}

model Bid {
  id            Int          @id @default(autoincrement())
  amount        Decimal      @db.Decimal(18,8)
  status        BidStatus
  user          User         @relation(fields: [userId], references: [id])
  userId        Int
  gameResult    GameResult   @relation(fields: [gameResultId], references: [id])
  gameResultId  Int          @unique
  transaction   Transaction  @relation("TransactionToBid", fields: [transactionId], references: [id])
  transactionId Int          @unique
  createdAt     DateTime     @default(now())
}

enum BidStatus {
  PENDING
  SUCCESS
  FAILED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  BID
  WIN
  LOSE
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}
