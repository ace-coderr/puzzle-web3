datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int           @id @default(autoincrement())
  customId      Int           @unique
  walletAddress String        @unique
  balance       Decimal       @default(0.0) @db.Decimal(18, 8)
  transactions  Transaction[]
  gameResults   GameResult[]
  bids          Bid[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([walletAddress])
}

model GameResult {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  gameId    String   @unique
  score     Int      @default(0)
  moves     Int      @default(0)
  won       Boolean  @default(false)
  bidding   Decimal  @default(0) @db.Decimal(18, 8)
  claimed   Boolean  @default(false)
  createdAt DateTime @default(now())
  bid       Bid?
}

model Bid {
  id           Int           @id @default(autoincrement())
  amount       Decimal       @db.Decimal(18, 8)
  status       BidStatus     @default(PENDING)
  user         User          @relation(fields: [userId], references: [id])
  userId       Int
  gameResult   GameResult    @relation(fields: [gameResultId], references: [id])
  gameResultId String        @unique
  transactions Transaction[]
  createdAt    DateTime      @default(now())
}

model Transaction {
  id           Int               @id @default(autoincrement())
  amount       Decimal           @db.Decimal(18, 8)
  type         TransactionType
  status       TransactionStatus
  user         User              @relation(fields: [userId], references: [id])
  userId       Int
  bid          Bid?              @relation(fields: [bidId], references: [id])
  bidId        Int?
  txSignature  String?           // âœ… optional transaction hash from Solana
  createdAt    DateTime          @default(now())
}

enum BidStatus {
  PENDING
  SUCCESS
  FAILED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  BID
  WIN
  LOSE
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}